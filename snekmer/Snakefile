# external libraries
import snekmer as skm
import numpy as np
from pandas import (DataFrame, read_csv, read_json)
from Bio import SeqIO
from sklearn.model_selection import train_test_split
from sklearn.ensemble import RandomForestClassifier
from sklearn.tree import DecisionTreeClassifier


# collect all fasta-like files, unzipped filenames, and basenames
input_files = glob(join("input", "*"))
zipped = [fa for fa in input_files if fa.endswith('.gz')]
unzipped = [fa.rstrip('.gz') for fa, ext
            in product(input_files, config['input']['file_extensions'])
            if fa.rstrip('.gz').endswith(f".{ext}")]

# map extensions to basename (basename.ext.gz -> {basename: ext})
uz_map = {skm.utils.split_file_ext(f)[0]: skm.utils.split_file_ext(f)[1] for f in zipped}
fa_map = {skm.utils.split_file_ext(f)[0]: skm.utils.split_file_ext(f)[1] for f in unzipped}
UZS = list(uz_map.keys())
FAS = list(fa_map.keys())
NON_BGS, BGS = FAS, []

# parse any background files
if str(config['input']['background']) != "None":
    bg_files = config['input']['background']
    if isinstance(bg_files, str):
        bg_files = [bg_files]
    bg_files = [skm.utils.split_file_ext(basename(f))[0] for flist in
                [glob(join("input", bg)) for bg in bg_files]
                for f in flist]
    NON_BGS, BGS = [f for f in FAS if f not in bg_files], bg_files

print(NON_BGS, BGS)


# validity check for alphabets
if (config['map_function'] not in skm.alphabet.ALPHABETS.keys()) and (str(config['map_function']) != "None"):  # and config['map_function'] != 'custom':
    raise ValueError("Invalid alphabet specified; alphabet must be a"
                     " string in the form 'reduced_alphabet_n' where"
                     " n is an integer between 0 and"
                     f" {len(skm.alphabet.ALPHABETS)}.")
# elif config['map_function'] == 'custom':


# define output directory (helpful for multiple runs)
if config['output']['nested_dir']:
    out_dir = join("output", config['map_function'], f"k-{config['k']:02}")
else:
    out_dir = "output"


# import subworkflow for unzipping any zipped input files
