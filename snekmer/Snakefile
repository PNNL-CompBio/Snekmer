        expand(join(out_dir, "features", "{nb}", "{fa}.json"), nb=NON_BGS, fa=FAS),
        # expand(join(out_dir), "score", "{nb}.csv", nb=NON_BGS),
        expand(join(out_dir, "model", "{nb}.pkl"), nb=NON_BGS)
        # expand(join(out_dir, "score", "{fa}.json"), fa=FAS)


